{
    "name": "Splitwise for Mint.com",
    "version": "1.0",
    "description": "Share the love",
    "icons": {
        "32": "img/splitwise32.png"
    },
    "permissions": [
        "declarativeContent",
        "identity"
    ],
    "host_permissions": [
        "https://www.splitwise.com/",
        "https://secure.splitwise.com/oauth/authorize/*",
        "https://secure.splitwise.com/oauth/token/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 3
  }